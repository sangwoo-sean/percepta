# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=percepta
DATABASE_PASSWORD=percepta_password
DATABASE_NAME=percepta
DATABASE_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Supabase Storage
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_BUCKET=uploads

# Mock Mode (for local development without external services)
MOCK_STORAGE=false
MOCK_AI=false

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# AI Feedback Settings
FEEDBACK_CONCURRENCY=4    # Number of parallel AI requests (default: 4)

# App
PORT=3000
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug          # debug, info, warn, error
LOG_DIR=logs             # Log file directory

