{
  "name": "percepta",
  "version": "1.0.0",
  "private": true,
  "description": "AI Persona Feedback Service MVP",
  "scripts": {
    "backend": "pnpm --filter backend dev",
    "backend:local": "pnpm --filter backend dev:local",
    "frontend": "pnpm --filter frontend dev",
    "frontend:local": "pnpm --filter frontend dev:local",
    "dev": "pnpm run --parallel dev",
    "dev:local": "pnpm run --parallel dev:local",
    "build": "pnpm run --parallel build",
    "test": "pnpm run --parallel test",
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": ["ai", "feedback", "persona"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  }
}
